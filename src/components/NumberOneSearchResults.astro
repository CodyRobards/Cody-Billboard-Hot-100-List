---
import type { NumberOneSearchRecord } from "../lib/number-one-search-index";

interface Props {
  items: NumberOneSearchRecord[];
}

const { items } = Astro.props as Props;

// Sort ascending by the first year a track hit #1
const sortedItems = [...items].sort((a, b) => {
  const aFirst = a.appearances[0];
  const bFirst = b.appearances[0];
  if (!aFirst || !bFirst) return 0;
  if (aFirst.year === bFirst.year) {
    return aFirst.sequence - bFirst.sequence;
  }
  return aFirst.year - bFirst.year;
});
---

<ol class="number-one-search-results" data-number-one-search-list>
  {
    sortedItems.map((entry) => {
      const embedId = `search-${entry.id}`;
      const yearsLabel = entry.appearances.map((appearance) => appearance.year).join(", ");
      return (
        <li class="number-one-search-results__item" data-entry-id={entry.id}>
          <div class="number-one-search-results__header">
            <span class="number-one-search-results__year">{yearsLabel}</span>
          </div>

          <div class="number-one-search-results__track">
            <span class="number-one-search-results__title">
              "{entry.title}"
              <span class="number-one-search-results__artist">
                {" by "}
                <a
                  class="number-one-search-results__artist-link"
                  href={`/search/?q=${encodeURIComponent(entry.artist)}`}
                >
                  {entry.artist}
                </a>
              </span>
            </span>
          </div>

          {entry.notes?.length ? (
            <ul class="number-one-search-results__notes">
              {entry.notes.map((note) => (
                <li>{note}</li>
              ))}
            </ul>
          ) : null}

          <div class="number-one-search-results__actions">
            {entry.appearances.map((appearance) => (
              <a
                class="number-one-search-results__link number-one-search-results__link--pill"
                href={`/years/${appearance.slug}/`}
              >
                View {appearance.year} Recap
              </a>
            ))}

            {entry.spotifyTrackId ? (
              <div class="number-one-search-results__spotify">
                <button
                  type="button"
                  class="overall-ranking-list__spotify-toggle"
                  data-track-id={entry.spotifyTrackId}
                  aria-controls={embedId}
                  aria-expanded="false"
                >
                  Play on Spotify
                </button>
                <div id={embedId} class="overall-ranking-list__spotify" hidden />
              </div>
            ) : null}
          </div>
        </li>
      );
    })
  }
</ol>

<style>
  @import "../styles/overall-ranking-list.css";

  .number-one-search-results {
    margin-top: clamp(1rem, 2vw, 1.5rem);
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1.25rem;
    border-top: 1px solid var(--color-rule-strong, rgba(255, 255, 255, 0.16));
  }

  .number-one-search-results__item {
    display: grid;
    gap: 0.75rem;
    padding-top: clamp(1rem, 1.75vw, 1.25rem);
    padding-bottom: 1.25rem;
    border-bottom: 1px solid var(--color-rule-soft, rgba(255, 255, 255, 0.12));
  }

  .number-one-search-results__header {
    display: flex;
    align-items: baseline;
    justify-content: flex-start;
  }

  .number-one-search-results__year {
    font-family: var(--font-heading, inherit);
    font-weight: 700;
    font-size: 1.05rem;
    color: var(--color-accent, #8a2be2);
    letter-spacing: 0.015em;
    text-transform: uppercase;
  }

  .number-one-search-results__track {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .number-one-search-results__title {
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--color-ink, #fff);
    line-break: loose;
    word-break: keep-all;
    overflow-wrap: break-word;
  }

  .number-one-search-results__artist {
    font-weight: 400;
    font-size: 1.05rem;
    color: var(--color-muted, rgba(255, 255, 255, 0.72));
    display: inline;
    white-space: nowrap;
    margin-left: 0.25rem;
  }

  .number-one-search-results__artist-link {
    color: inherit;
    text-decoration: none;
  }

  .number-one-search-results__artist-link:hover,
  .number-one-search-results__artist-link:focus-visible {
    text-decoration: underline;
  }

  .number-one-search-results__notes {
    font-size: 0.95rem;
    margin: 0;
    padding: 0 0 0 1.25rem;
    display: grid;
    gap: 0.6rem;
    list-style: disc;
    color: var(--color-muted, rgba(255, 255, 255, 0.72));
  }

  .number-one-search-results__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    align-items: center;
    justify-content: flex-start;
  }

  .number-one-search-results__link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
    white-space: nowrap;
    text-decoration: none;
  }

  .number-one-search-results__link--pill {
    padding: 0.5rem 1rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-paper);
    background: var(--color-accent);
    box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.35);
    transition:
      transform var(--transition-speed, 0.18s) ease,
      box-shadow var(--transition-speed, 0.18s) ease,
      background-color var(--transition-speed, 0.18s) ease;
  }

  .number-one-search-results__link--pill:hover,
  .number-one-search-results__link--pill:focus-visible {
    transform: translateY(-0.15rem);
    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.45);
    background-color: #e0a871;
  }

  .number-one-search-results__spotify {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    min-width: 16rem;
  }

  @media (max-width: 40rem) {
    .number-one-search-results__spotify {
      min-width: 0;
      width: 100%;
    }
  }

  @media (min-width: 48rem) {
    .number-one-search-results__item {
      padding-bottom: 1.75rem;
    }

    .number-one-search-results__year {
      font-size: 1.15rem;
    }

    .number-one-search-results__title {
      font-size: 1.45rem;
    }
  }
</style>
