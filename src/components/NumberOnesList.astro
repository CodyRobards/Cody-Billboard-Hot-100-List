---
interface NumberOneEntry {
  title: string;
  artist: string;
  notes?: string[];
}

interface Props {
  heading: string;
  description?: string;
  items: NumberOneEntry[];
}

const { heading, description, items } = Astro.props as Props;
---

<section class="article__table" aria-labelledby={heading}>
  <u><h2 class="section__title" id={heading}>{heading}</h2></u>
  {description ? <p class="section__lead">{description}</p> : null}
  <ol class="number-one-list">
    {
      items.map((entry) => (
        <ul class="number-one-list__item">
          <div class="number-one-list__track">
            <span class="number-one-list__title">
              "{entry.title}"<span class="number-one-list__artist">by {entry.artist}</span>
            </span>
          </div>
          {entry.notes && entry.notes.length ? (
            <ul class="number-one-list__notes">
              {entry.notes.map((note) => (
                <li>{note}</li>
              ))}
            </ul>
          ) : null}
        </ul>
      ))
    }
  </ol>
</section>

<style>
  .section {
    padding: 20px;
  }

  .number-one-list {
    display: grid;
    gap: 1.25rem;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  .number-one-list__item {
    border-bottom: 1px solid var(--color-border, rgba(0, 0, 0, 0.08));
    padding-bottom: 1.25rem;
  }

  .number-one-list__header {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
  }

  .number-one-list__position {
    font-family: var(--font-heading, inherit);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-accent, #8a2be2);
  }

  .number-one-list__track {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .number-one-list__title {
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--color-text, #000);
  }

  .number-one-list__artist {
    font-weight: 400;
    font-size: 1.1rem;
    color: var(--color-text-muted, rgba(0, 0, 0, 0.6));
  }

  .number-one-list__notes {
    font-size: 0.95rem;
    margin: 0.75rem 0 0 0;
    padding: 0 0 0 1.25rem;
    display: grid;
    gap: 0.6rem;
    color: var(--color-text-muted, rgba(0, 0, 0, 0.75));
  }

  @media (min-width: 48rem) {
    .number-one-list__item {
      padding-bottom: 1.75rem;
    }

    .number-one-list__position {
      font-size: 1.25rem;
    }

    .number-one-list__title {
      font-size: 1.5rem;
    }
  }
</style>
