---
interface NumberOneEntry {
  title: string;
  artist: string;
  notes?: string[];
}

interface Props {
  heading: string;
  description?: string;
  items: NumberOneEntry[];
}

import { slugifyHeading } from "../lib/slugify";

const { heading, description, items } = Astro.props as Props;
const headingId = slugifyHeading(heading);
---

<section class="article__table number-one-list__section" aria-labelledby={headingId}>
  <u><h2 class="section__title" id={headingId}>{heading}</h2></u>
  {description ? <p class="section__lead">{description}</p> : null}
  <ol class="number-one-list">
    {
      items.map((entry) => (
        <li class="number-one-list__item">
          <div class="number-one-list__track">
            <span class="number-one-list__title">
              "{entry.title}"<span class="number-one-list__artist">by {entry.artist}</span>
            </span>
          </div>
          {entry.notes && entry.notes.length ? (
            <ul class="number-one-list__notes">
              {entry.notes.map((note) => (
                <li>{note}</li>
              ))}
            </ul>
          ) : null}
        </li>
      ))
    }
  </ol>
</section>

<style>
  .number-one-list__section {
    margin-top: clamp(1rem, 2vw, 1.5rem);
    padding-top: clamp(1.5rem, 2vw, 2.25rem);
    border-top: 1px solid var(--color-rule-strong, rgba(255, 255, 255, 0.16));
  }

  .number-one-list {
    display: grid;
    gap: 1.25rem;
    padding: 0;
    margin: 0;
    list-style: none;
    border-top: 1px solid transparent;
  }

  .number-one-list__item {
    border-bottom: 1px solid var(--color-rule-soft, rgba(255, 255, 255, 0.12));
    padding-bottom: 1.25rem;
  }

  .number-one-list__header {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
  }

  .number-one-list__position {
    font-family: var(--font-heading, inherit);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-accent, #8a2be2);
  }

  .number-one-list__track {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .number-one-list__title {
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--color-ink, #fff);
    line-break: loose;
    word-break: keep-all;
    overflow-wrap: break-word;
  }

  .number-one-list__artist {
    font-weight: 400;
    font-size: 1.1rem;
    color: var(--color-muted, rgba(255, 255, 255, 0.72));
    display: inline;
    white-space: nowrap;
    margin-left: 0.25rem;
  }

  .number-one-list__notes {
    font-size: 0.95rem;
    margin: 0.75rem 0 0 0;
    padding: 0 0 0 1.25rem;
    display: grid;
    gap: 0.6rem;
    color: var(--color-muted, rgba(255, 255, 255, 0.72));
  }

  @media (min-width: 48rem) {
    .number-one-list__item {
      padding-bottom: 1.75rem;
    }

    .number-one-list__position {
      font-size: 1.25rem;
    }

    .number-one-list__title {
      font-size: 1.5rem;
    }
  }
</style>
