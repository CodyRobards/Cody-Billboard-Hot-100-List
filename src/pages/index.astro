---
/* eslint-disable astro/no-deprecated-astro-resolve */
import "../styles/critical.css";
const title = "Astro Starter";
const resolveAsset = typeof Astro.resolve === "function" ? Astro.resolve : (path: string) => path;
const navigationScript = resolveAsset("../scripts/prefetch-navigation.ts");
const serviceWorkerScript = resolveAsset("../scripts/register-service-worker.ts");
const nonCriticalStylesHref = resolveAsset("../styles/noncritical.css");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preload" as="style" href={nonCriticalStylesHref} onload="this.rel='stylesheet'" />
    <noscript>
      <link rel="stylesheet" href={nonCriticalStylesHref} />
    </noscript>
  </head>
  <body>
    <main id="content-root">
      <h1>{title}</h1>
      <p>Get started by editing <code>src/pages/index.astro</code>.</p>
    </main>
    <script type="module" defer src={navigationScript}></script>
    <script type="module" defer src={serviceWorkerScript}></script>
  </body>
</html>
